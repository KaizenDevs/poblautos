<div class="container" style="margin-top: 140px">
  <div class="row">

    <div class="col-lg-4">
      <h2>Cliente:</h2>
      <ul class="list-group">
        <li class="list-group-item"><strong>Nombre: </strong><%= @procedure.name %></li>
        <li class="list-group-item"><strong>Teléfono: </strong><%= @procedure.phone %></li>
        <li class="list-group-item"><strong>email: </strong><%= @procedure.email %></li>
      </ul>
    </div>
    <div class="col-lg-4">
      <h2>Datos:</h2>
      <ul class="list-group">
        <li class="list-group-item"><input type="checkbox" <%= 'checked="checked"' if @procedure.startinglicence %> disabled="disabled"> Matrículas Iniciales </li>
        <li class="list-group-item"><input type="checkbox" <%= 'checked="checked"' if @procedure.taxpayment %> disabled="disabled"> Pagos de Impuesto  </li>
        <li class="list-group-item"><input type="checkbox" <%= 'checked="checked"' if @procedure.historial %> disabled="disabled"> Historiales  </li>
        <li class="list-group-item"><input type="checkbox" <%= 'checked="checked"' if @procedure.transfer %> disabled="disabled"> Traspasos  </li>
        <li class="list-group-item"><input type="checkbox" <%= 'checked="checked"' if @procedure.phototicket %> disabled="disabled"> Pagos fotomultas  </li>
        <li class="list-group-item"><input type="checkbox" <%= 'checked="checked"' if @procedure.soat %> disabled="disabled"> Soat  </li>
      </ul>
    </div>
    <div class="col-lg-4">
      <h2>Estado:</h2>
      <%= form_for @procedure do |f| %>
      <div class="form-group">

      <%= f.select(:status, options_for_select(Procedure.statuses.keys), {label: "Estado:"}, { :class => 'form-control' }) %>
      </div>
      <%= f.submit "Actualizar", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

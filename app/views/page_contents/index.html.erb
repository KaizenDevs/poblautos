<div class="container" style="margin-top: 100px">
  <h1>Listando Opiniones</h1>
  <%= link_to new_opinion_path do %>
    <button class="btn-success" style="margin-bottom: 5px"><span class="fa fa-plus"> Nueva Opinión</span></button>
  <% end %>
  <h2>Página: Inicio</h2>
  <table class="table">
    <tr>
      <th>Título</th>
      <th>Texto</th>
      <th>Página</th>
      <th></th>
    </tr>
    <% @home_page_contents.each do |page_content| %>
      <tr>
        <td><%= page_content.title %></td>
        <td><%= page_content.html %></td>
        <td><%= page_content.page %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_page_content_path(page_content) %></td>
      </tr>
    <% end %>
  </table>
  <h2>Página: Empresa</h2>
  <table class="table">
    <tr>
      <th>Título</th>
      <th>Texto</th>
      <th>Página</th>
      <th></th>
    </tr>
    <% @home_page_contents.each do |page_content| %>
      <tr>
        <td><%= page_content.title %></td>
        <td><%= page_content.html %></td>
        <td><%= page_content.page %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_page_content_path(page_content) %></td>
      </tr>
    <% end %>
  </table>
</div>
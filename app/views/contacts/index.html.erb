<div class="container-fluid" style="margin-top: 150px">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-bordered table-hover table-condensed"> 
				<tr>
					<th class="text-center">Nombre</th>
					<th class="text-center">Apellidos</th>
					<th class="text-center">Email</th>
					<th class="text-center">Telefono</th>					
					<th class="text-center">Mensaje</th>
				</tr>
				<% @contacts.each do |contact| %>
					<tr class="text-center">
						<td class="vert-align"><%= contact.name %></td>
						<td class="vert-align"><%= contact.lastname %></td>
						<td class="vert-align"><%= contact.email %></td>
						<td class="vert-align"><%= contact.phone %></td>					
						<td class="text-left vert-align" style="width:30%;"><%= contact.message %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
<style>
  .avatar {
    border-radius: 100%;
    width: 50px;
  }
</style>

<div class="container" style="margin-top: 100px">
  <h1>Listando Opiniones</h1>
  <%= link_to new_opinion_path do %>
    <button class="btn-success" style="margin-bottom: 5px"><span class="fa fa-plus"> Nueva Opinión</span></button>
  <% end %>
  <table class="table">
    <tr>
      <th>Número</th>
      <th>Avatar</th>
      <th>Nombre</th>
      <th>Cargo</th>
      <th>Opinión</th>
      <th colspan="2"></th>
    </tr>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.number %></td>
        <td><%= image_tag(opinion.avatar.url(:thumb), class: 'avatar') %></td>
        <td><%= opinion.name %></td>
        <td><%= opinion.position %></td>
        <td><%= opinion.opinion %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_opinion_path(opinion) %></td>
        <td><%= link_to "<span class='fa fa-trash'></span>".html_safe, opinion_path(opinion), method: :delete, data: { confirm: '¿Esta seguro que desea elminar esta pregunta?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
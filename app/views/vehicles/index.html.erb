<div class="container" style="margin-top: 150px">
  <h1>Listando Vehículos</h1>
  <p>Recuerda crear marcas aquí antes de crear vehículos.</p>
  <%= link_to new_vehicle_path do %>
    <button class="btn-success" style="margin-bottom: 5px"><span class="fa fa-plus"> Nuevo Vehículo</span></button>
  <% end %>
  <table class="table">
    <tr>
      <th>Nombre y Marca</th>
      <th>Imagen</th>
      <th>Carro/Moto</th>
      <th>Año</th>
      <th>Estado</th>
      <th>Precio</th>
      <th>Transmisión</th>
      <th>Combustible</th>
      <th>Motor</th>
      <th>Comentarios</th>
      <th colspan="2"></th>
    </tr>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %> <%= vehicle.brand.name %></td>
        <td>
          <% if !vehicle.vehicle_images.first.nil? %>
            <a href="<%= vehicle_url(vehicle) %>" class="media-box"><%= image_tag(vehicle.vehicle_images.first.image.url(:thumb)) %></a>
          <% else %>
            <a href="<%= vehicle_url(vehicle) %>" class="media-box"><img src="http://i592.photobucket.com/albums/tt5/Mardini03/imagen-no-disponible.png" alt="" style="width: 100px"></a>
          <% end %>
        </td>
        <td><%= vehicle.vehicle_class.capitalize %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.state %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.transmission.capitalize %></td>
        <td><%= vehicle.gas.capitalize %></td>
        <td><%= vehicle.engine %></td>
        <td><%= vehicle.comments %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_vehicle_path(vehicle) %></td>
        <td><%= link_to "<span class='fa fa-trash'></span>".html_safe, vehicle_path(vehicle), method: :delete, data: { confirm: '¿Esta seguro que desea eliminar este vehículo?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="container" style="margin-top: 100px">
  <h1>Listando Vehículos</h1>
  <%= link_to new_vehicle_path do %>
    <button class="btn-success" style="margin-bottom: 5px"><span class="fa fa-plus"> Nuevo Vehículo</span></button>
  <% end %>
  <table class="table">
    <tr>
      <th>Nombre</th>
      <th>Imagén</th>
      <th>Nombre</th>
      <th>Cargo</th>
      <th>Opinión</th>
      <th>Visible</th>
      <th colspan="2"></th>
    </tr>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= image_tag(vehicle.image.url(:thumb), class: 'avatar') %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.state %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.transmission %></td>
        <td><%= vehicle.gas %></td>
        <td><%= vehicle.model %></td>
        <td><%= opinion.visible? ? "Sí" : "No" %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_opinion_path(opinion) %></td>
        <td><%= link_to "<span class='fa fa-trash'></span>".html_safe, opinion_path(opinion), method: :delete, data: { confirm: '¿Esta seguro que desea elminar esta pregunta?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
<style>
  .avatar {
    width: 50px;
  }
</style>

<div class="container" style="margin-top: 100px">
  <h1>Listando Noticias</h1>
  <%= link_to new_news_path do %>
    <button class="btn-success" style="margin-bottom: 5px"><span class="fa fa-plus"> Nueva Noticia</span></button>
  <% end %>
  <table class="table">
    <tr>
      <th>Título</th>
      <th>Fecha</th>
      <th>Imagen</th>
      <th>Categoría</th>
      <th>Destacada</th>
      <th colspan="2"></th>
    </tr>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.created_at.strftime("%b %d, %Y") %></td>
        <td><%= image_tag(news.image.url(:thumb), class: 'avatar') %></td>
        <td><%= news.category.name %></td>
        <td><%= news.highlight? ? "Sí" : "No" %></td>
        <td><%= link_to "<span class='fa fa-pencil'></span>".html_safe, edit_news_path(news) %></td>
        <td><%= link_to "<span class='fa fa-trash'></span>".html_safe, news_path(news), method: :delete, data: { confirm: '¿Esta seguro que desea elminar esta pregunta?' } %></td>
      </tr>
    <% end %>
  </table>
</div>